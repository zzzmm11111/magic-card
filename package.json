{
  "name": "magic-card",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.ts,.tsx",
    "lint:fix": "eslint . --ext .vue,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{vue,ts,tsx,css}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "@vueuse/core": "^11.2.0",
    "animejs": "^4.3.6",
    "axios": "^1.7.9",
    "naive-ui": "^2.39.1",
    "pinia": "^2.2.6",
    "vue": "^3.5.13",
    "vue-router": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vitest/coverage-v8": "^2.1.6",
    "@vue/eslint-config-typescript": "^14.1.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.31.0",
    "gh-pages": "^6.1.1",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.0.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "unplugin-auto-import": "^0.18.6",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^6.0.3",
    "vitest": "^2.1.6",
    "vue-tsc": "^2.1.10"
  }
}
